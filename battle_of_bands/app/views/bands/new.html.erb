<div class="container">
  <div id="tools">
<div class="row">
<div class="col-md-12 col-sm-12"><h1>Welcome back, ADMIN.</h1>
<br>
<br>
  <div class="row tools">
  <div class="col-lg-6">
          <button type="button" class="btn btn-success">  <span class="glyphicon glyphicon glyphicon-plus"></span> ADD NEW BAND</button>
<button type="button" class="btn btn-danger"> <span class="glyphicon glyphicon glyphicon-remove"></span> CLEAR ALL</button>
 
  </div><!-- /.col-lg-6 -->
  <div class="col-lg-4">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search for...">
      <span class="input-group-btn">
        <button class="btn btn-primary" type="button"> <span class="glyphicon glyphicon glyphicon-search"></span>SEARCH</button>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-4 -->
 
    <div class="col-lg-2 pull-right">  
    <label>
      <span style="font-family:'Oswald',sans; color:#000; "> VOTING STATE:</span>
      <input type="checkbox"  checked data-toggle="toggle">
        </label></div>
</div><!-- /.row -->
 
  <div class="container">
    <div class="bandform">
      <strong><span style="color:white">Add new band</span></strong>
<%= form_for @band do |f| %>
<br>
  <%= f.label :name %>:<br>
  <%= f.text_field :name %><br>
 
  <%= f.label :bio %>:<br>
  <%= f.text_area :bio %><br>
 
  <%= f.label :location %>:
  <%= f.text_field :location %><br>
 
  <%= f.label :donate_link %>:
  <%= f.text_field :donate_link %><br>
 
  <%= f.label :website %>:
  <%= f.text_field :website %><br />
 
  <%= f.label :password %><br />
  <%= f.password_field :password %><br /><br>
 
  <%= f.submit %>
<% end %>

<hr>
</div>
<div class="bandform">

<span style="color:white"><strong>Clear all bands (caution: cannot be undone!)</strong></span><br>
<%= form_tag({:action => :clear}, :multipart => true) do %>
  <span style="color:white">Password<br></span>
  <%= password_field_tag "clear_password" %><br><br>
  <%= submit_tag "Clear" %>
<% end %>

</div>
</div>
 
 
 </div>
 
</div>
</div>
 
 
 
</div><!-- end of container-->
